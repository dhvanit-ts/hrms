{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "build": "bun run build.ts",
    "start": "bun dist/server.js",
    "dev": "bun --watch src/server.ts",
    "seed": "bun scripts/seed.ts",
    "openapi": "bun scripts/generate-openapi.ts",
    "predev": "bun run lint-format",
    "prebuild": "bun run lint-format && bun run db:migrate",
    "db:up": "docker compose -f infra/docker-compose.yml up -d",
    "db:down": "docker compose -f infra/docker-compose.yml down",
    "db:migrate": "bun x drizzle-kit migrate",
    "lint": "bun x biome check",
    "lint-format": "bun x biome check --write"
  },
  "dependencies": {
    "@react-email/components": "^1.0.1",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.10",
    "openapi3-ts": "^4.5.0",
    "pg": "^8.16.3",
    "rate-limiter-flexible": "^8.3.0",
    "resend": "^6.5.2",
    "socket.io": "^4.8.1",
    "typescript": "^5.9.3",
    "ua-parser-js": "^2.0.6",
    "winston": "^3.18.3",
    "yamljs": "^0.3.0",
    "zod": "^4.1.13",
    "zod-openapi": "^5.4.5"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/node-cache": "^4.2.5",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^19.2.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "react-email": "^5.0.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
