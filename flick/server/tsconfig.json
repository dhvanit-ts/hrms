{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"outDir": "dist",
		"rootDir": "./",
		"baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "jsx": "react",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": false,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": [
		"src/**/*",
		"docs/**/*",
		"scripts/**/*"
	]
}
